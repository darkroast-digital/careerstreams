doctype html
html
  head
    title CareerStreams | Contact Us
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    
    meta(property='og:title', content='CareerStreams | Contact Us')
    meta(property='og:url', content='https://careersteams.com/contact')
    meta(property='og:site_name', content='CareerStreams')
    meta(property='og:image', content='http://careerstreams.com/img/cs-fb-img.jpg')
        
    link(rel="icon", type="image/png" href="img/fav.png") 
    
    link(rel="stylesheet", href="css/reset.css")
    link(rel="stylesheet", href="css/styles.css")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")

  body

    include includes/header.jade

    main
      section.contact-intro
        #cd-google-map
          #google-container
          #cd-zoom-in  
          #cd-zoom-out
        h2.serif.ttu Contact Us 

      section.services-content.row
        .contact 
          h4.serif.ttu Get In Touch
          p  We are happy to answer any questions you may have about what we offer at CareerStreams.  Reach out to us and we will get back to you as soon as we can.
          .row
            .three-fifth
              .row
                .one-twelfth
                  i.fa.fa-map-marker
                .eleven-twelfth
                  h5 Head Office
                  p  3100 Temple Drive, Suite 700,  Windsor, Ontario,  N8W 5J6, CANADA (see map)
              .row
                .one-twelfth
                  i.fa.fa-map-marker
                .eleven-twelfth
                  h5 London Office
                  p  380 Wellington St., 6th Floor, Suite 634, London, Ontario,  N6A 5B5  CANADA
              .row
                .one-twelfth
                  i.fa.fa-phone
                .eleven-twelfth
                  h5 (519) 254-4246
              .row 
                .one-twelfth
                  i.fa.fa-fax
                .eleven-twelfth
                  h5 (519) 254-7329
              .row
                .one-twelfth
                  i.fa.fa-envelope
                .eleven-twelfth
                  h5
                    a(href="mailto:fdm@careerstreams.com") Fabio De Menech - President
              .row
                .one-twelfth
                  i.fa.fa-envelope  
                .eleven-twelfth
                  h5
                    a(href="mailto:mdemenech@careerstreams.com") Massimo De Menech - Regional Marketing <span>Manager</span>
            .two-fifth
              img.cs-location(src="img/cs-windsor.jpg", alt="")
              img.cs-location(src="img/cs-london.jpg", alt="")    
        section.form
          .row
            h5.general-info General Information
            #contact_form.form-style   
              #contact_body
                .name
                  label(for="name") Name
                  input#name.input-field(type='text', name='name', required='true', autocomplete='off')
                .email
                  label(for="email") Email
                  input#email.input-field(type='text', name='email', required='true', autocomplete='off')
                .subject
                  label(for="subject") Subject
                  input#subject.input-field(type='text', name='subject', maxlength='15', required='false', autocomplete='off')
                .message
                  label.message-label(for="message") Message
                  textarea#message.textarea-field(name='message', required='true', rows="15", autocomplete='off')
                input#submit_btn.submit-field(type='submit', value='Submit')
              #contact_results
        
      include includes/footer.jade


    //Scripts
    include includes/scripts.jade
